<%- include("partials/header.ejs") %>

<div id="new" class="ui main text container segment">
    <div class="ui huge header">Edit <%= foundBlog.title %></div>
    <form class="ui form" action="/blogs/<%= foundBlog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="foundBlog[title]" value="<%= foundBlog.title %>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="foundB[img]" value="<%= foundBlog.img %>">
        </div>
        <div class="field">
            <label>Blog Body</label>
            <textarea name="foundBlog[body]" cols="30" rows="10" required><%= foundBlog.body %></textarea>
        </div>
        <input type="submit" class="ui violet basic button big">
    </form>
</div>


